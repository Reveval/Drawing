<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view_main"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/anim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_level0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onClickLevel"
        android:text="Level 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/image_view_main"
        app:layout_constraintTop_toBottomOf="@+id/image_view_main" />

    <Button
        android:id="@+id/button_level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="onClickLevel"
        android:text="Level 1"
        app:layout_constraintEnd_toEndOf="@+id/button_level0"
        app:layout_constraintStart_toStartOf="@+id/button_level0"
        app:layout_constraintTop_toBottomOf="@+id/button_level0" />

    <Button
        android:id="@+id/button_level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onClickLevel"
        android:text="Level 2"
        app:layout_constraintEnd_toEndOf="@+id/button_level1"
        app:layout_constraintStart_toStartOf="@+id/button_level1"
        app:layout_constraintTop_toBottomOf="@+id/button_level1" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickLevel"
        android:text="Start Anim"
        app:layout_constraintEnd_toEndOf="@+id/image_view_main"
        app:layout_constraintTop_toTopOf="@+id/button_level0" />


</androidx.constraintlayout.widget.ConstraintLayout>